pipeline {
    agent any
    tools {
     maven 'Maven 3'   
     jdk '1.8.0_191'
    }
    stages {
        stage('Build') {
            steps {
                bat 'mvn install'
               
            }
        
        
       
        }
	stage('Test') {
            steps {
                bat 'mvn test'
            }
			post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        
    }
}